<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    xmlns:expandable="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_call_log_height"
    swipe:leftEdgeSwipeOffset="0dp"
    swipe:rightEdgeSwipeOffset="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FF4C4D"
        android:orientation="horizontal"
        android:gravity="center"
        android:tag="Bottom3">

        <ImageView
            android:id="@+id/trash"
            android:layout_gravity="left|center"
            android:layout_width="27dp"
            android:layout_height="30dp"
            android:src="@drawable/trash" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="7dp"
            android:text="delete?"
            android:textColor="#fff"
            android:textSize="17sp" />

        <Button
            android:id="@+id/delete"
            android:layout_gravity="right|center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:text="delete"
            android:textColor="#FF4C4D"
            android:textSize="17sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white" >

        <TextView
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1.1"
            android:gravity="left|bottom"
            android:paddingLeft="20dp"
            android:paddingBottom="1dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/item_call_log_phone_number_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginBottom="3dp"
            android:paddingLeft="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:paddingTop="1dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/item_call_log_date_size"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:textColor="@color/grey_text_color"
                        android:textSize="@dimen/item_call_log_time_information_size"/>

                    <TextView
                        android:id="@+id/category"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.7"
                        android:gravity="top"
                        android:paddingLeft="8dp"
                        android:textColor="@color/grey_text_color"
                        android:textSize="@dimen/item_call_log_time_information_size"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/period"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="top"
                        android:paddingLeft="8dp"
                        android:textColor="@color/grey_text_color"
                        android:textSize="@dimen/item_call_log_time_information_size"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/play"
                    android:layout_width="@dimen/item_call_log_play_size"
                    android:layout_height="@dimen/item_call_log_play_size"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical|left"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_play_normal"/>

                <ImageView
                    android:id="@+id/adjust"
                    android:layout_width="@dimen/item_call_log_adjust_button_size"
                    android:layout_height="@dimen/item_call_log_adjust_button_size"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center_vertical|right"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_expand"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>