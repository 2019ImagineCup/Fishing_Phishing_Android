<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="phone number"
        android:textSize="@dimen/call_fragment_number_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="@dimen/call_fragment_margin_bottom"
            android:layout_gravity="bottom">

            <ImageButton
                android:id="@+id/decline_call"
                android:layout_width="@dimen/call_fragment_button_size"
                android:layout_height="@dimen/call_fragment_button_size"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:textColor="@android:color/white"
                android:text="Decline"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="@dimen/call_fragment_margin_bottom"
            android:layout_gravity="bottom">

            <ImageButton
                android:id="@+id/get_call"
                android:layout_width="@dimen/call_fragment_button_size"
                android:layout_height="@dimen/call_fragment_button_size"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:textColor="@android:color/white"
                android:text="Accept"/>

        </LinearLayout>




    </LinearLayout>


</LinearLayout>